<h1>New book</h1>
<%= form_for @book, :html=>{:multipart=>true} do |f| %>
    <%= f.error_messages :header_message => "New book error", :class => "alert alert-error", :header_tag => :h3 %>
    <%= fields_for :book do |builder| %>
        <%= render 'title_fields', :f => builder %>
    <% end %>
    <br/>
    <%= f.submit "Create and continue" %>
<% end %>

<%= link_to 'Books', books_path %>
