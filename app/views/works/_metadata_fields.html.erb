    <%= f.text_field :typeOfResourceLabel, :placeholder => 'Type of resource label', :class=>'input-block-level' %>
  </div>
</div>
<div class="control-group">
  <%= f.label :topic, 'Topic(s)', :class=>'control-label' %>
      <% @work.topic.each do |topic| %>
          <div class="controls">
            <%= text_field_tag "work[topic][]", topic, class: 'input-block-level' %>
          </div>
      <% end %>
      <%- if @work.topic.empty? %>
          <div class="controls">
            <%= text_field_tag "work[topic][]", nil, class: 'input-block-level' %>
          </div>
      <%- end %>
</div>
