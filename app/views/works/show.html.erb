<h3>Type: <%= @work.work_type.blank? ? 'Undefined' : @work.work_type.to_s %></h3>
<h3><%= @work.title %></h3>
<table border="0">
  <tr><td><b>Subtitle</b></td><td><%= @work.subTitle %></td></tr>
  <% if @work.has_author? %>
    <% @work.authors.each do |person| %>
          <tr><td><b>Author</b></td><td><%= link_to person.name, person_path(person) %></td></tr>
    <% end %>
  <% else %>
     <tr><td><b>Author</b></td><td><p>No author defined for this work.</p></td></tr>
  <% end %>

  <% if @work.has_concerned_person? %>
      <% @work.people_concerned.each do |person| %>
          <tr><td><b>Concerning</b></td><td><%= link_to person.name, person_path(person) %></td></tr>
      <% end %>
  <% end %>

  <tr><td><b>Shelf Locator</b></td><td><%= @work.shelfLocator %></td></tr>
  <tr><td><b>Type Of Resource</b></td><td><%= @work.typeOfResource %></td></tr>
  <tr><td><b>Publisher</b></td><td><%= @work.publisher %></td></tr>
  <tr><td><b>Place of Origin</b></td><td><%= @work.originPlace %></td></tr>
  <tr><td><b>ISO Language</b></td><td><%= @work.languageISO %></td></tr>
  <tr><td><b>Language</b></td><td><%= @work.languageText %></td></tr>
  <tr><td><b>Topic</b></td><td><%= @work.subjectTopic %></td></tr>
  <tr><td><b>Date issued</b></td><td><%= @work.dateIssued %></td></tr>
  <tr><td><b>Physical extent</b></td><td><%= @work.physicalExtent %></td></tr>
  <tr><td><b>UUID</b></td><td><%= @work.uuid %></td></tr>
</table>

<hr/>
<% #Handle the tei representations. %>
<% if @work.has_rep? %>
    <p><b>Representations:</b></p>
    <ul>
      <% @work.single_file_reps.each do |t| %>
          <li><%= link_to t.representation_name + ' (' + t.pid + ')', single_file_representation_path(t) %></li>
      <% end %>
      <% @work.ordered_reps.each do |t| %>
          <li><%= link_to t.representation_name + ' (' + t.pid + ')', ordered_representation_path(t) %></li>
      <% end %>
    </ul>
<% else %>
    <p>No representations for this work.</p>
<% end %>
<hr/>

<br/>

<%= render 'footer' %>