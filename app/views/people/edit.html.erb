<h1>Editing person</h1>
<%= form_for @person, :html=>{:multipart=>true} do |f| %>
    <%= f.error_messages :header_message => "New person error", :class => "alert alert-error", :header_tag => :h3 %>
    <%= fields_for :person do |builder| %>
        <%= render 'metadata_fields', :f => builder %>
    <% end %>
    <br/>
    <%= fields_for :portrait, :html=>{:multipart=>true} do |builder| %>
        <%= render 'portrait_upload', :f => builder %>
    <% end %>
    <br/>
    <%= fields_for :tei, :html=>{:multipart=>true} do |builder| %>
        <%= render 'tei_file_upload', :f => builder %>
    <% end %>
    <br/>
    <%= f.submit "Update" %>
<% end %>

<%= link_to 'Show', @person %> |
<%= link_to 'Back', people_path %>
