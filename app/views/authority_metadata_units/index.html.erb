<% if @amus.nil? %>
    <div class="page-header">
      <h1>AuthorityMetadataUnits</h1>
    </div>
    <div class="row hidden-phone">
      <%= link_to 'agent/person', people_path, :class=>'btn' %>
      <%= link_to 'place', places_path, :class=>'btn' %>
    </div>
<% else %>
<div class="page-header">
  <h1>AuthorityMetadataUnits</h1>
</div>

<div class="row hidden-phone">
  <div class="span4">
    <strong class="lead">Type</strong>
  </div>
  <div class="span4">
    <strong class="lead">Value</strong>
  </div>
  <div class="span4"></div>
</div>
<hr class="hidden-phone">

    <% @amus.each do |amu| %>
        <div class="row">
          <div class="span4">
            <strong>
              <%= link_to amu do %>
                <%= amu.type %>
              <% end %>
            </strong>
          </div>
          <div class="span4">
            <%= amu.value %>
          </div>
          <div class="span4">
            <div class="btn-group">
                <%= link_to edit_authority_metadata_unit_path(amu), :class=>'btn' do %>
                  <i class="icon-edit"></i>
                  <span class="hidden-phone">Edit</span>
                <% end %>
                <%= link_to amu, method: :delete, data: { confirm: 'Are you sure?' }, :class=>'btn'  do %>
                  <i class="icon-trash"></i>
                  <span class="hidden-phone">Delete</span>
                <% end %>
            </div>
          </div>
        </div>
        <hr>
    <% end %>
<% end %>

