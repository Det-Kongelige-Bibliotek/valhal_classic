<div class="control-group">
    <%= f.label :typeOfResource, 'Type of resource', :class=>'control-label' %>
    <div class="controls">
        <%= f.text_field :typeOfResource, :placeholder => 'Type of resource', :class=>'input-block-level' %>
    </div>
</div>
