<div class="page-header">
  <h1 class="text-left">New work</h1>
</div>

<div class="row hidden-phone ">
  <div class="span3">
       <span class="lead ">
         Step 1
       </span>
  </div>
  <div class="span3 ">
       <span class="lead">
         Step 2
       </span>
  </div>
  <div class="span3">
       <span class="lead">
         Step 3
       </span>
  </div>
  <div class="span3">
       <span class="lead">
         Step 4
       </span>
  </div>
</div>

<div class="progress progress-success hidden-phone">
  <div class="bar" style="width: 25%;"></div>
</div>

<p class="lead visible-phone">Step 1 / 4</p>

<%= form_for @work, :html=>{:multipart=>true, :class=>'form-horizontal'} do |f| %>
    <div class="row">
      <div class="span9">
        <div class="control-group">
          <div class="controls">
            <%= f.error_messages :header_message => 'New work error', :class => 'alert alert-error', :header_tag => :h4 %>
          </div>
        </div>
        <%= fields_for :work do |builder| %>
            <%= render 'title_fields', :f => builder %>
        <% end %>
        <div class="control-group action">
          <div class="controls">
            <%= f.submit 'Next', :class=>'btn btn-success btn-large pull-right' %>
          </div>
        </div>
      </div>
    </div>
<% end %>

