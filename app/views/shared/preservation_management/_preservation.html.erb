<%= form_for @object, :html=>{:multipart=>true}, url: {action: 'update_preservation'} do |f| %>
    <%= f.error_messages :header_message => 'Error when editing preservation settings', :class => 'alert alert-error',
                         :header_tag => :h3 %>
    <%- @preservationMetadata = @object.preservationMetadata -%>
    <%= fields_for :preservation do |builder| %>
        <%= render 'shared/preservation_management/preservation_admin', :f => builder %>
    <% end %>
    <br/>
    <%= f.submit 'Update settings', :class => 'btn btn-primary' %>
    <%= f.submit Constants::PERFORM_PRESERVATION_BUTTON, :class => 'btn btn-primary' %>
<% end %>