<div>
  <br/>
  <%= f.label :portrait_file, "Portrait of the person" %>
  <span class="btn btn-primary btn-file">
    <span class="js_button_text">Upload file</span>
    <%= f.file_field :portrait_file %>
  </span>
  <a class="btn btn-small btn-danger" href="#" id="portrait_file_clear" title="Clear file"><i class="icon-remove"></i></a>

  <%= fields_for :portrait_metadata do |builder| %>
      <%= builder.text_field :title, :placeholder => "Title of the portrait" %>
  <% end %>
  <%= fields_for :portrait_representation_metadata do |builder| %>
      <%= builder.text_field :label, :placeholder => "Label" %>
  <% end %>
</div>
