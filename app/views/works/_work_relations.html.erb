<%# Shows work work relations, including multi-work relations such as hasParts %>
<% @work.get_work_relations.each do |label, value| %>
    <% if displayable?(value) %>
        <tr>
          <td><b><%= t label %></b></td>
          <% if value.class == Array %>
              <% value.each do |val| %>
                  <td style="display:block">
                    <%= link_to(val.get_title_for_display, work_path(val)) %>
                  </td>
              <% end %>
          <% else value %>
              <td data-id="<%= value.__id__%>">
                <%= link_to(value.get_title_for_display, work_path(value)) %>
              </td>
              <% if defined? edit && edit %>
                <td>
                  <%= link_to(work_path(value), data: {target: value.__id__, label: label}) do %>
                  <!-- <a href="#" data-function="create-dropdown"  >
                    <i class="icon-edit"></i>
                      </a>    -->
                    <%= t('.edit') %>
                   <%= content_tag(:i, "", class: 'icon-edit') %>
                <% end  %>
                </td>
              <% end %>
          <% end %>
        </tr>
    <% end %>
<% end %>