<h1>Editing book</h1>
<%= form_for @book, :html=>{:multipart=>true}, :url => {:action=> "save_edit"}  do |f| %>
    <%= f.error_messages :header_message => "Edit book error", :class => "alert alert-error", :header_tag => :h3 %>
    <%= fields_for :book do |builder| %>
        <%= render 'title_fields', :f => builder %>
    <% end %>
    <br/>
    <%= fields_for :author, :html=>{:multipart=>true} do |builder| %>
        <%= render 'add_author', :f => builder %>
    <% end %>
    <br/>
    <%= fields_for :person_described, :html=>{:multipart=>true} do |builder| %>
        <%= render 'add_concerned_person', :f => builder %>
    <% end %>
    <br/>
    <%= fields_for :book do |builder| %>
        <%= render 'metadata_fields', :f => builder %>
    <% end %>
    <br/>
    <%= f.submit "Next" %>
<% end %>

<%= link_to 'Show', @book %> |
