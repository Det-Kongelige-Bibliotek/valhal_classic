<div class="control-group">
  <%= f.label :agent, 'Agent(s) for the work', :class=>'control-label' %>
  <div class="controls">
  <%= collection_select(:agent,
                        :id,
                        AuthorityMetadataUnit.all,
                        :id,
                        :value,
                        options = { :prompt => '(Select agents)', :include_blank => false },
                        { :multiple => true, :class=>'input-block-level' }) %>
  </div>
</div>
