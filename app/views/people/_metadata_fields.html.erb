

<div class="control-group">
  <%= f.label :firstname, "Author name", :class=>'control-label' %>
  <div class="controls">
      <%= f.text_field :firstname, :placeholder => "Firstname:" %>
      <%= f.text_field :lastname, :placeholder => "Lastname:" %>
  </div>
</div>

<div class="control-group">
  <%= f.label :date_of_birth, "Date of birth/Date of death", :class=>'control-label' %>
  <div class="controls">
      <%= f.text_field :date_of_birth, :placeholder => "Date of birth:" %>
      <%= f.text_field :date_of_death, :placeholder => "Date of death:" %>
  </div>
</div>

